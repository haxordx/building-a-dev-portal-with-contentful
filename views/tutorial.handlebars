<div class="container">

    <h1>{{title}}</h1>

    <div class="row">
        <div class="col-4">
            <ol>
                {{#each sidebar}}
                <li><a href="#{{this.slug}}">{{this.title}}</a></li>
                {{/each}}
            </ol>
        </div>
        <div class="col-8">
            {{#each steps}}
            <div class="step" id="{{this.fields.slug}}">
                <h1>{{this.fields.title}}</h1>
                {{{this.html}}}
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script type="text/javascript">

    let hideAll = function () {
        $('.step').hide();
    }

    $('a').click(function () {
        hideAll();
        $($(this).attr('href')).show();
    });

    hideAll();

    $($('.step')[0]).show();
</script>
